<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                                 http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Entidades -->
        <class>com.prograii25.prograii25grupo7b.db.Usuario</class>
        <class>com.prograii25.prograii25grupo7b.db.Cliente</class>
        <class>com.prograii25.prograii25grupo7b.db.Producto</class>
        <class>com.prograii25.prograii25grupo7b.db.Venta</class>
        <class>com.prograii25.prograii25grupo7b.db.Factura</class>
        <class>com.prograii25.prograii25grupo7b.db.DetalleFactura</class>

        <properties>
            <!-- Conexión a SQL Server -->
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1435;databaseName=SistemaEmpresaTecnologia;encrypt=false;trustServerCertificate=true"/>
            <property name="javax.persistence.jdbc.user" value="JenniferAL"/>
            <property name="javax.persistence.jdbc.password" value="Admin"/>
            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- Generación de tablas -->
            <!-- Para crear tablas automáticamente la primera vez: -->
            <!-- <property name="eclipselink.ddl-generation" value="create-tables"/> -->
            <!-- Luego poner en none para no tocar datos existentes -->
            <property name="eclipselink.ddl-generation" value="none"/>

            <!-- Log de EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            
            <!-- Formato de fecha y compatibilidad SQL Server -->
            <property name="eclipselink.target-database" value="SQLServer"/>
        </properties>
    </persistence-unit>
</persistence>
