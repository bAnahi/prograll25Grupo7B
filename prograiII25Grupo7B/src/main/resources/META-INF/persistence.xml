        <!--Si luego anotas las demás entidades con @Entity, se aagregan aquí -->
        
        <properties>
            <!-- Conexión -->
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost\\MSSQLSERVER:1433;databaseName=EmpresaTecnologia;trustServerCertificate=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="DiosEsBueno2024"/>
            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

